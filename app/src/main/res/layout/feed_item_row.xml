<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/feed_item_date"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="0.1"
            android:gravity="center"
            android:text="Dec"
            android:textColor="@color/colorTextSecondary">
        </TextView>

        <TextView
            android:id="@+id/feed_item_title"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="0.75"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="feed item title"
            android:textColor="@color/colorTextSecondary">
        </TextView>

        <LinearLayout
            android:id="@+id/feed_item_play"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.districtofwonders.pack.widgets.FontAwesomeTextView
                android:id="@+id/feed_item_play_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="play-circle-o"
                android:textSize="32sp"/>

            <TextView
                android:id="@+id/feed_item_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:singleLine="true"
                android:text="120 min"
                android:textColor="@color/colorTextSecondary"
                android:textSize="10sp">
            </TextView>

        </LinearLayout>


        <com.districtofwonders.pack.widgets.FontAwesomeTextView
            android:id="@+id/feed_item_download"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_weight="0.0"
            android:text="fa-download"
            android:textSize="24sp"
            android:visibility="gone"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:background="@color/colorTextSecondary"/>
</LinearLayout>


