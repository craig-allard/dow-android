<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/episode_header_background"
        android:orientation="vertical"
        android:padding="20dip">

        <TextView
            android:id="@+id/episodeFeedName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="StarShipSofa"
            android:textColor="@color/episode_header_text"
            android:textSize="@dimen/abc_text_size_medium_material"/>

        <TextView
            android:id="@+id/episodeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No 417 blah blah"
            android:textColor="@color/episode_header_text"
            android:textSize="@dimen/abc_text_size_large_material"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dip"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/episodePubDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 January 2016"
                    android:textColor="@color/episode_header_text"
                    android:textSize="@dimen/abc_text_size_small_material"/>

                <TextView
                    android:id="@+id/episodeDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="47 min"
                    android:textColor="@color/episode_header_text"
                    android:textSize="@dimen/abc_text_size_small_material"/>

            </LinearLayout>

            <com.districtofwonders.pack.widgets.FontAwesomeTextView
                android:layout_marginRight="20dip"
                android:id="@+id/episodeDelete"
                android:text="trash-o"
                style="@style/EpisodeIcon"/>

            <com.districtofwonders.pack.widgets.FontAwesomeTextView
                android:layout_marginRight="20dip"
                android:id="@+id/episodeDownload"
                android:text="fa-download"
                style="@style/EpisodeIcon"/>

            <com.districtofwonders.pack.widgets.FontAwesomeTextView
                android:id="@+id/episodePlay"
                android:text="play-circle-o"
                style="@style/EpisodeIcon"/>

        </LinearLayout>
    </LinearLayout>

    <WebView
        android:id="@+id/episodeShowNotes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:cacheColorHint="#00000000"
        android:padding="10dip"/>
</LinearLayout>