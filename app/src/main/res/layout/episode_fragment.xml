<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/episode_header_background"
        android:orientation="vertical"
        android:padding="20dip">

        <TextView
            android:id="@+id/episodeFeedName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="StarShipSofa"
            android:textColor="@color/episode_header_text"
            android:textSize="@dimen/abc_text_size_medium_material"/>

        <TextView
            android:id="@+id/episodeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No 417 blah blah"
            android:textColor="@color/episode_header_text"
            android:textSize="@dimen/abc_text_size_large_material"/>

        <TextView
            android:id="@+id/episodePubDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 January 2016  -  47 min"
            android:textColor="@color/episode_header_text"
            android:textSize="@dimen/abc_text_size_small_material"/>

    </LinearLayout>

    <TextView
        android:id="@+id/episodeShowNotes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dip"
        android:scrollbars="vertical"
        android:text="asd fsad sa dfa sdf asdf asdf "/>
</LinearLayout>